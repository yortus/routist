{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "lib": ["es2016"],
        "types": ["node"],
        "outDir": "../dist/",
        "rootDir": ".",
        "sourceMap": true,
        "experimentalDecorators": true,

        // Static checks
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    }
}
